@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="~/Content/reset.css">
    <link rel="stylesheet" type="text/css" href="~/Content/main.css">
</head>
<body>

    <section class="billboard dark">


        <header class="wrapper dark"></header>

        <div class="caption dark animated wow fadeInDown clearfix">
            <h1>Optimus Information</h1>
            <p>Leverage the experience of a software outsourcing company</p>
            <p>with over 100 clients on more than 500 projects</p>
            <hr>
        </div>
        <div class="shadow"></div>
    </section><!--  End billboard  -->


    <section class="services wrapper">
        <ul class="clearfix">
            <li class="animated wow fadeInDown">
                <img class="icon" src="~/Content/image/icon1.png" alt="" />
                <span class="separator"></span>
